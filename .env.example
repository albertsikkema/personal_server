# Environment variables for FastAPI application
# Copy this file to .env and update with your actual values

# Legacy API Key for backward compatibility (optional with JWT authentication)
API_KEY=your-secret-api-key-here

# Required: JWT Authentication Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-minimum-32-characters-long

# Optional: Application configuration
# APP_NAME=FastAPI Application
# DEBUG=true
# ENV=development  # Environment: development, staging, production (docs hidden in production)
# LOG_LEVEL=INFO

# Optional: Logging configuration
# LOG_TO_FILE=true
# LOG_FILE_PATH=logs
# LOG_FILE_NAME=fastapi.log
# LOG_MAX_BYTES=10485760
# LOG_BACKUP_COUNT=5
# LOG_JSON_FORMAT=true

# Optional: Crawling service configuration
# CRAWL4AI_BASE_URL=https://crawl4ai.test001.nl
# CRAWL4AI_API_TOKEN=your-crawl4ai-jwt-token-here  # Optional: JWT token if Crawl4AI instance requires authentication
# CRAWLING_CACHE_TTL_HOURS=1
# CRAWLING_USER_RATE_LIMIT=5/minute

# Optional: CORS configuration
# CORS_ALLOWED_ORIGINS=*  # Development: allow all origins
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://another-domain.com  # Production: specific origins